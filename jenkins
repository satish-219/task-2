pipeline{
    agent any
 stages {
        stage('clone repo') {
            steps {
                echo "Clone the Git repository"
                git branch: 'main',
                url: 'https://github.com/satish-219/task-2.git'
            }
        }

        stage('Build') {
            steps {
                echo "build the maven project"
                bat 'mvn clean package'
            }
        }

        stage('Deploy') {
            steps {
                echo "connected to ec2-instance and ready to deploy"
                bat '''
                scp -i C:/Users/USER/satish.pem target/01-maven-web-app.war ec2-user@3.111.169.63:/home/ec2-user/
                '''
            }
        }
    }
}
